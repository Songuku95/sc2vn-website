extends ../layout.normal

block content-inside
  table.table.table-hover
    thead
      tr
        th #
        th Player 1
        th
        th Player 2
        th
    tbody
      - for match in matches
        tr
          td
          td= match.player_1
          td vs
          td= match.player_2
          td

block sidebar
  a.btn.btn-block.button-submit(href='/matches/new')
    i.fa.fa-plus.fa-fw
    | &nbsp; New Match
