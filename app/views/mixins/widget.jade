mixin matches-widget(title, matches)
  .widget
    .widget-title
      i.fa.fa-bolt.fa-fw
      = ' ' + title
      span.pull-right
        a(href='/matches')
          i.fa.fa-bars.fa-fw
    .widget-content
      table.table.table-hover
        tbody
          each match in matches
            tr.clickable-row(data-href=match.getShowPath())
              td.col-md-3(align='right')
                a(href=match.player_1.getShowPath())
                  = match.player_1.name
                  | &nbsp;
                  img(src=match.player_1.getRaceImagePath())
              td.col-md-1(align='center') vs
              td.col-md-3(align='left')
                a(href=match.player_2.getShowPath())
                  img(src=match.player_2.getRaceImagePath())
                  | &nbsp;
                  = match.player_2.name

mixin players-widget(title, players)
  .widget
    .widget-title
      i.fa.fa-users.fa-fw
      = ' ' + title
      span.pull-right
        a(href='/users/rank')
          i.fa.fa-bars.fa-fw
    .widget-content
      table.table.table-hover
        tbody
          each player in players
            tr.clickable-row(data-href=player.getShowPath())
              td.col-md-3(align='left')
                  img(src=player.getRaceImagePath())
                  | &nbsp;
                  if player.clan
                    | #{player.clan.name}.
                  strong
                    = player.name
              td.col-md-1(align='right')
                  = player.score

mixin tournament-info(tournament)
  .widget
    .widget-content
      table.table.table-hover
        tbody
          tr
            th.col-md-3 Status
            td.col-md-4
              ul
                li UPCOMMING
                li or STARTED
                li or FINISHED
          tr
            th Players
            td 20/30
          tr
            th Start
            td 07/11/2019 01:00 UTC
          tr
            th Total prize
            td 20.000 VND
