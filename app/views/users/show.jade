extends ../layout.normal

include ../mixins/user.jade

block content-inside
  +user-profile(user)
  .clearfix
  +user-statistic(user.stats)
  +user-recent-matches-chart(matches_data)

block sidebar
  if isLoggedIn && currentUser._id.equals(user._id)
    a.btn.btn-block.button-submit(href=user.getEditPath())
      i.fa.fa-edit.fa-fw
      | &nbsp; Edit Information
